/*我的猫咪卡片部分*/
.big-top{
  width:100%;
}


.top{
  height:80px;
  width:90%;
  background-color: rgb(255, 255, 255);
 display: flex;
  margin-top:30rpx;
  margin-left: 5%;
  margin-right: 5%;
  border-radius: 7px;
  box-shadow: rgb(177, 175, 175) 1px 1px 2px;
  align-items: center;
  flex-direction: row;
}

/*猫咪图片*/
.top-picture{
  border-radius:50%;
  border-color: rgb(90, 90, 90);
  height:55px;
  width: 55px;
  margin-left: 23px;
  box-shadow:0 5px 6px rgb(185, 185, 185);            /*设置图片阴影*/
}


/*猫咪名字*/
.top-text{
  font-size: 15px;
  color:rgb(110, 110, 110);
  margin-left: 30px;
}

/*画箭头*/
.big-arrow{           /*包在arrow外面的容器*/
  height: 26px;
  width: 26px;
  margin-right: 30px;
}

.arrow{
  width:10px;
  height:10px;
  border-top:1px solid #999;
  border-right:1px solid #999;
  transform: rotate(45deg);
  
  margin-top:8px;
}

